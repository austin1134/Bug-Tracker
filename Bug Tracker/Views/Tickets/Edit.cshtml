@model Bug_Tracker.Models.Ticket

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<head>
    <script src="~/tinymce/js/tinymce/themes/modern/theme.min.js"></script>
    <script src="~/tinymce/js/tinymce/jquery.tinymce.min.js"></script>
    <script src="~/tinymce/js/tinymce/tinymce.min.js"></script>
    <script>
        tinymce.init({
            selector: '#mytextarea',
            statusbar: false,
            browser_spellcheck: true,
            height: 200
        });
    </script>
</head>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(x => x.DeveloperId);
    @Html.HiddenFor(x => x.AuthorId);
    @Html.HiddenFor(x => x.Comments);
    @Html.HiddenFor(x => x.CreationDate);
    @Html.HiddenFor(x => x.Developers);
    @Html.HiddenFor(x => x.Projects);
    @Html.HiddenFor(x => x.ProjectId);
    @Html.HiddenFor(x => x.Submitters);
    @Html.HiddenFor(x => x.TicketPriority);
    @Html.HiddenFor(x => x.TicketPriorityId);
    @Html.HiddenFor(x => x.TicketStatus);
    @Html.HiddenFor(x => x.TicketStatusId);
    @Html.HiddenFor(x => x.TicketType);
    @Html.HiddenFor(x => x.TicketTypeId);


    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Id)

        <div class="form-group">
            @Html.LabelFor(model => model.Title, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Title, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Title, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Description, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Description, new { htmlAttributes = new { @class = "form-control", @id = "mytextarea" } })
                @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
